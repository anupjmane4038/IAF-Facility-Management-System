<% layout('layouts/boilerplate') %>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Montserrat', sans-serif;
        line-height: 1.6;
        background-color: #f5f5f5;
        /* Ensures all text is black */
      }

      .container {
        width: 100%;
        max-width: 960px;
        padding: 20px;
        margin: auto;
        text-align: center;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-weight: 700;
      }


      h1 {
        font-size: 36px;
        text-align: center;
        margin: 15px 0 0;
      }

      .card {
        background-color: #fff;
        border: 1px solid #e1e4e8;
        border-radius: 100px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
        margin: 20px 0;
        text-align: left;
        display: inline-block;
        width: 100%;
      }

      .card h2 {
        font-size: 30px;
        font-weight: 700;
        /* Ensures subheading is black */
      }

      .profile-pic {
        display: block;
        margin: -10px auto 10px;
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      table,
      th,
      td {
        border: 1px solid #e1e4e8;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #f5f5f5;
        font-weight: 700;
      }

      @media (max-width: 960px) {
        h1 {
          font-size: 28px;
        }

        .container {
          padding: 20px;
        }

        .card {
          padding: 20px;
          border-radius: 50px;
        }

        .card h2 {
          font-size: 24px;
        }

        th,
        td {
          font-size: 1em;
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>My Profile</h1>
      <div class="card">
        <img src="/Images/Profile.jpeg" alt="User Profile Picture" class="profile-pic" />
        <h2 align="center">
          <%= currentUser.name %>
        </h2>
        <table>
          <% if (currentUser.card !==null && currentUser.card !==undefined) { %>
            <tr>
              <th>Card Number</th>
              <td>
                <%= currentUser.card %>
              </td>
            </tr>
            <tr>
              <th>Username</th>
              <td>
                <%= currentUser.username || 'N/A' %>
              </td>
            </tr>
            <tr>
              <th>Email</th>
              <td>
                <%= currentUser.email || 'N/A' %>
              </td>
            </tr>
            <tr>
              <th>Mobile Number</th>
              <td>
                <%= currentUser.mobileNumber || 'N/A' %>
              </td>
            </tr>
            <tr>
              <th>Service Status</th>
              <td>
                <%= currentUser.serviceStatus || 'N/A' %>
              </td>
            </tr>
            <tr>
              <th>User Status</th>
              <td>
                <% if (currentUser.card===-1) { %>
                  Mess Manager
                  <% } else if (currentUser.card===-2) { %>
                    PMC
                    <% } else { %>
                      Member
                      <% } %>
              </td>
            </tr>
            <tr>
              <th>Rank</th>
              <td>
                <%= currentUser.rank || 'N/A' %>
              </td>
            </tr>
            <tr>
              <th>IP</th>
              <td>
                <%= currentUser.ipNumber || 'N/A' %>
              </td>
            </tr>
            <% } else { %>
              <tr>
                <th>Full Name</th>
                <td>
                  <%= currentUser.name || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Username</th>
                <td>
                  <%= currentUser.username || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Email</th>
                <td>
                  <%= currentUser.email || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Mobile Number</th>
                <td>
                  <%= currentUser.mobileNumber || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Service Status</th>
                <td>
                  <%= currentUser.serviceStatus || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>User Status</th>
                <td>
                  Guest
                </td>
              </tr>
              <tr>
                <th>Rank</th>
                <td>
                  <%= currentUser.rank || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>With Family</th>
                <td>
                  <%= currentUser.withFamily || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Number of Guests</th>
                <td>
                  <%= currentUser.numberOfGuests || 'N/A' %>
                </td>
              </tr>
              <tr>
                <th>Purpose</th>
                <td>
                  <%= currentUser.purpose || 'N/A' %>
                </td>
              </tr>
              <% } %>
        </table>
      </div>
    </div><br>
  </body>

  </html>