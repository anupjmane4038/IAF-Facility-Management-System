<% layout('layouts/boilerplate') %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>All Guest Meals</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Montserrat', sans-serif;
                line-height: 1.6;
                color: #333;
                background-color: #f5f5f5;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                font-weight: 700;
            }

            .container {
                width: 100%;
                max-width: 100%;
                padding: 35px;
                margin: auto;
                overflow-x: auto;
                text-align: center;
            }

            h1 {
                font-size: 36px;
                text-align: center;
                margin-bottom: 20px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
                border-radius: 50px;
                overflow: hidden;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                margin: auto;
            }

            th,
            td {
                padding: 12px;
                text-align: center;
                border-bottom: 1px solid #ddd;
                font-size: 16px;
            }

            th {
                background-color: #f5f5f5;
                color: #333;
            }

            tr {
                background-color: #fff;
            }

            .text-warning {
                color: #ffc107;
            }

            .text-success {
                color: #28a745;
            }

            .text-danger {
                color: #dc3545;
            }

            .no-meals {
                font-style: italic;
                color: #999;
            }

            @media (max-width: 1050px) {
                h1 {
                    font-size: 28px;
                }

                table {
                    font-size: 14px;
                }

                td,
                th {
                    padding: 8px;
                }
            }
        </style>
    </head>

    <body>
        <div class="container">
            <h1>All Guest Meals</h1>
            <% if (meals.length> 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Number of Guests</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% meals.forEach(meal=> { %>
                            <tr>
                                <td>
                                    <%= meal.mealFullName %>
                                </td>
                                <td>
                                    <%= formatDate(new Date(meal.mealStartDate)) %>
                                </td>
                                <td>
                                    <%= formatDate(new Date(meal.mealEndDate)) %>
                                </td>
                                <td>
                                    <%= meal.mealNumberOfGuests %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <p class="no-meals">No meals found.</p>
                    <% } %>
        </div><br><br>
    </body>

    </html>